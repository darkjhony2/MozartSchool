@page
@using System.Reflection
@using WebUI.Utils
@model WebUI.Pages.Common.DeleteModel

@{
    ViewData["Title"] = "Eliminar";
}

<h2>Eliminar - @Model.View.DisplayName</h2>
<h3>¿Estas seguro de eliminar esto?</h3>
<div>
    <hr />
    @foreach (PropertyInfo prop in Model.EModel.GetType().GetProperties())
    {
        <dl class="row">

            <dt class="col-sm-3">
                @ReflectionExtensions.GetPropertyDisplayName(prop)
            </dt>
            <dd class="col-sm-9">
                @prop.GetValue(Model.EModel, null)
            </dd>
        </dl>
    }

    <form method="post">
        <input type="hidden" name="Id" value="@Model.EModel.GetType().GetProperties().Where(x=> x.Name == "Id").First().GetValue(Model.EModel, null)" />
        <input type="hidden" name="view" value="@Model.View.Name" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-view="@Model.View.Name">Volver al listado</a>
    </form>
</div>